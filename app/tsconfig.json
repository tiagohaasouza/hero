{
  "compilerOptions": {
    "noImplicitAny": true,
    "useDefineForClassFields": true,
    "target": "ESNext",
    "jsx": "preserve",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "sourceMap": false,
    "paths": {
      "@/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@i18n/*": ["src/i18n/*"],
      "@pages/*": ["src/pages/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@plugins/*": ["src/plugins/*"],
      "@router/*": ["src/router/*"],
      "@script/*": ["src/script/*"],
      "@stores/*": ["src/stores/*"],
      "@styles/*": ["src/styles/*"],
      "@themes/*": ["src/themes/*"],
      "@app": ["src/app.ts"],
      "@book": ["src/book.ts"],
      "@types": ["src/types.ts"],
      "@shared/*": ["../shared/*"]
    },
    "types": [
      "vite/client",
      "vite-plugin-vue-layouts/client",
      "unplugin-vue-router/client",
      "vue",
      "node",
      "vue3-toastify/global"
    ]
  },
  "vueCompilerOptions": {
    "target": 3,
    "experimentalDisableTemplateSupport": false
  },
  "include": ["src/**/*.vue", "src/**/*.ts"],
  "exclude": ["dist", "node_modules", "cypress"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
